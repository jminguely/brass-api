<!doctype html>
<html lang="fr_CH" class="h-100">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Brassmaster Flash API</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <style>
    .table-header th {
      position: sticky;
      top: 0;
      z-index: 10;
      background-color: #e61e41;
      color: white;

    }

    .clickable-row:hover {
      cursor: pointer;
      background: #eee;
    }

    ul {
      padding: 0 0 0 1em;
    }
  </style>
</head>

<body>
  <div class="container-fluid my-4">
      <div class="row">
          <div class="col-md-12">
            <h1>Brassmaster Flash: Agenda</h1>
            <table class="table">
              <tr class="table-header">
                <th>Date</th>
                <th>Titre/Ville</th>
                <th>Tp</th>
                <th>Sx</th>
                <th>Tb</th>
                <th>B</th>
                <th>P</th>
                <th>V</th>
                <th>Absents</th>
              </tr>
              {% for event in events %}
                <tr class="clickable-row" onclick="window.location='/concerts/{{ event.id }}';">
                  <td>{{ event.start }}<br />{{ event.time }}</td>
                  <td>{{ event.title }}<br />{{ event.city }}</td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['Trumpet I'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    {% for musicien in event.effectifs['Trumpet II'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['Saxophone alto'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    {% for musicien in event.effectifs['Saxophone tenor'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    {% for musicien in event.effectifs['Saxophone barython'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['Trombone'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['Sousaphone'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['Percu'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['MC'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                  <td>
                    <ul>
                    {% for musicien in event.effectifs['Absents'] %}
                      <li>{{musicien.Nom | split(' ')[0]}}</li>
                    {% endfor %}
                    </ul>
                  </td>
                </tr>
              {% endfor %}
            </table>
            
          </div>
      </div>
  </div>
</body>

</html>