<!doctype html>
<html lang="fr_CH" class="h-100">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Brassmaster Flash API</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <style>
    .table-header th {
      position: sticky;
      top: 0;
      z-index: 10;
      border-top: 0;
      background-color: #e61e41;
      color: white;
    }

    .b-l {
      border-left: 2px solid #e61e41;
    }

    .b-l-light {
      border-left: 1px solid #eee;
    }

    .clickable-row:hover {
      cursor: pointer;
      background: #eee;
    }
    .table td {
      font-size: 0.75em;
    }

    ul {
      padding: 0 0 0 1em;
    }
  </style>
</head>

<body>
  <div class="container-fluid my-4">
    <div class="row">
      <div class="col-2"><a href="/" class="btn btn-danger">←</a></div>
      <div class="col-8 text-center"><h1>Brassmaster Flash: Musiciens</h1></div>
    </div>
      <div class="row">
          <div class="col-md-12">
            <table class="table">
              <tr class="table-header">
                <th>Nom</th>
                <th>Instruments</th>
                <th>Téléphone</th>
                <th>E-Mail</th>
              </tr>
              {% for musicien in musiciens %}
                <tr class="clickable-row" onclick="window.location='/musiciens/{{ musicien.id }}';">
                  <td>{{ musicien.nom }}</td>
                  <td>  
                    {% for instrument in musicien.instruments %}
                      {{ instrument}}<br />
                    {% endfor %}
                  </td>
                  <td><a href="tel:{{ musicien.phone }}">{{ musicien.phone }}</a> </td>
                  <td><a href="mailto:{{ musicien.email }}">{{ musicien.email }}</a> </td>
                </tr>
              {% endfor %}
            </table>
            
          </div>
      </div>
  </div>
</body>

</html>