<!doctype html>
<html lang="fr_CH" class="h-100">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Brassmaster Flash API</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <style>
    th {
      border-top: 0;
      background-color: #e61e41;
      color: white;
    }

    .clickable-row:hover {
      cursor: pointer;
      background: #eee;
    }

    .table-concert td {
      font-size: 0.75em;
    }


    .b-l {
      border-left: 2px solid #e61e41;
    }

    .b-l-light {
      border-left: 1px solid #eee;
    }


    ul {
      padding: 0 0 0 1em;
    }
  </style>
</head>

<body>
  <div class="container-fluid my-4">
    <div class="row">
      <div class="col-2"><a href="/musiciens" class="btn btn-danger">←</a></div>
      <div class="col-8 text-center"><h1>Brassmaster Flash: {{ musicien.nom }}</h1></div>
    </div>
      <div class="row">
          <div class="col-md-12">
            <table class="table">
              <tr>
                <th>Instruments</th>
                <td>  
                  {% for instrument in musicien.instruments %}
                    {{ instrument}}<br />
                  {% endfor %}
                </td>
              </tr>
              <tr>
                <th>Téléphone</th>
                <td><a href="tel:{{ musicien.phone }}">{{ musicien.phone }}</a> </td>
              </tr>
              <tr>
                <th>E-Mail</th>
                <td><a href="mailto:{{ musicien.email }}">{{ musicien.email }}</a> </td>
              </tr>
              <tr>
                <th>Concerts</th>
                <td>
                  <table class="table table-concert">
                   {% for gig in musicien.gigs if gig.past == "Future" %}
                   <tr class="clickable-row" onclick="window.location='/concerts/{{ gig.id }}';">
                    <td>{{ gig.date }} <strong>{{ gig.titre}}</strong></td>
                    <td>
                      {% if gig.statut == "???"  %}
                        <span class="text-danger">
                      {% elseif gig.statut == "Présent" %}
                        <span class="text-success">
                      {% else %}
                        <span class="text-warning">
                      {% endif %}
                        {{ gig.statut }}
                      </span>
                    </td>
                   </tr>
                  {% endfor %}

                  </table>
                </td>
              </tr>
              <tr>
                <th>Concerts passé</th>
                <td>
                  <table class="table table-concert">
                   {% for gig in musicien.gigs if gig.past == "Past" %}
                   <tr class="clickable-row" onclick="window.location='/concerts/{{ gig.id }}';">
                    <td>{{ gig.date }} <strong>{{ gig.titre}}</strong></td>
                    <td>
                      {% if gig.statut == "Présent" %}
                        <span class="text-success">
                          Présent
                        </span>
                      {% else %}
                        <span>
                          Non-présent
                        </span>
                      {% endif %}
                    </td>
                   </tr>
                  {% endfor %}

                  </table>
                </td>
              </tr>
            </table>
            
          </div>
      </div>
  </div>
</body>

</html>