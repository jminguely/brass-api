<!doctype html>
<html lang="fr_CH" class="h-100">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{ salaire.name }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  </head>

  <body>
    <div class="container my-5">
      <div class="row">
        <div class="col-md-12">
          <table class="table my-4">
            <tr colspan="4">
              <th>
                <h1>Salaire:
                  {{ salaire.musicien.nom }}</h1>
                <h5>Brassmaster Flash:
                  {{ salaire.dateDebut }}-{{ salaire.dateFin }}</h5>
              </th>
            </tr>
            <tr>
              <th>Type d'engagement</th>
              <th>Nombre</th>
              <th>Montant</th>
              <th>Prix total</th>
            </tr>
            <tr>
              <td>
                <strong>Concerts</strong>
              </td>
              <td>{{ salaire.qtyConcerts }}</td>
              <td>CHF
                {{ salaire.prixConcert }}</td>
              <td>
                <strong>CHF
                  {{ salaire.qtyConcerts * salaire.prixConcert }}.-</strong>
              </td>
            </tr>
            <tr>
              <td>
                <strong>Répétitions</strong>
              </td>
              <td>{{ salaire.qtyRepetitions }}</td>
              <td>CHF
                {{ salaire.prixRepetition }}</td>
              <td>
                <strong>CHF
                  {{ salaire.qtyRepetitions * salaire.prixRepetition }}.-</strong>
              </td>
            </tr>
            <tr>
              <td>
                <strong>Défraiement</strong>
              </td>
              <td></td>
              <td>CHF
                {{ salaire.defraiement }}</td>
              <td>
                <strong>CHF
                  {{ salaire.defraiement }}.-</strong>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>
                <strong>Total</strong>
              </td>
              <td>
                <strong>CHF
                  {{ salaire.qtyConcerts * salaire.prixConcert + salaire.qtyRepetitions * salaire.prixRepetition + salaire.defraiement }}.-</strong>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-md-12">
          <table class="table mt-5">
            <tr>
              <th colspan="3">
                <h5>Informations bancaires</h5>
              </th>
            </tr>
            <tr>
              <th>Nom</th>
              <td>{{ salaire.musicien.nom }}</td>
            </tr>
            <tr>
              <th>Adresse</th>
              <td>{{ salaire.musicien.adresse }}</td>
            </tr>
            <tr>
              <th>IBAN</th>
              <td>{{ salaire.musicien.iban }}</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </body>

</html>
