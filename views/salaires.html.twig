<!doctype html>
<html lang="fr_CH" class="h-100">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Brassmaster Flash API</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body
  <div class="container my-5">
    <div class="row">
      <div class="col-md-12">
        <table class="table my-4">
          <tr>
            <th colspan="3"><h2>Brassmaster Flash - Salaire</h2></th>
          </tr>
          <tr>
            <th colspan="3"><h5>{{ salaire.name }}</h5></th>
          </tr>
          <tr>
            <th>Nombre d'engagements</th>
            <th>Prix du service</th>
            <th>Montant total</th>
          </tr>
          <tr>
            <td>{{ salaire.nombre }}</td>
            <td>CHF 50.-</td>
            <td>CHF {{ salaire.montant }}.-</td>
          </tr>
        </table>
      </div>
      <div class="col-md-12">
        <table class="table mt-5">
            <tr>
                <th colspan="3"><h5>Informations bancaires</h5></th>
              </tr>
          <tr>
            <th>Nom</th>
            <td>{{ salaire.musicien.nom }}</td>
          </tr>
          <tr>
            <th>Adresse</th>
            <td>{{ salaire.musicien.adresse }}</td>
          </tr>
          <tr>
            <th>IBAN</th>
            <td>{{ salaire.musicien.iban }}</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</body>

</html>